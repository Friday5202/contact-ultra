/* 导航栏样式 */
.navi {
  height: 200rpx;
  width: 100%;
  background-color: rgb(255, 255, 255);
  position: fixed;
  z-index: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.navitext {
  text-align: center;
  padding-left: 50rpx;
  line-height: 80rpx;
  margin-top: 50rpx;
  color: #000000;
  font-weight: 600;
}

.add-btn {
  font-size: 36rpx;
  color: #007aff;
  background-color: transparent;
  border: none;
  margin-right: 20rpx;
}

/* 联系人区域样式 */
.contact {
  position: relative;
  top: 120rpx; /* 保持与顶部导航的适当间距 */
}

/* 群组样式 */
.group {
  padding: 20rpx 40rpx;
}

.header {
  color: rgb(85, 85, 85);
  font-size: 24rpx;
  font-weight: 500;
  margin-top: 80rpx; 
}

.card {
  margin: 40rpx;
}

.name {
  font-size: 28rpx;
}

.nick {
  font-size: 22rpx;
  color: #999;
}

.line {
  border-bottom: 1rpx solid #ddd;
}

/* 右侧字母栏样式 */
.shortcut {
  position: fixed;
  right: 0;
  top: 400rpx;
  height: 60%;
  width: 46rpx;
  background-color: rgb(255, 255, 255);
  border-radius: 25rpx;
  padding: 18rpx 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  opacity: 1;
  z-index: 1;
  font-weight: bold;
}

.letter {
  height: 100%;
  width: 100%;
  text-align: center;
  color: #808080;
  font-size: 20rpx;
}

