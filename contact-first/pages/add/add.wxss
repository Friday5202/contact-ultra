.container {
  padding: 20rpx;
}

.header {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.form {
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 30rpx;
}

label {
  font-size: 28rpx;
  color: #333;
}

input {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}

button {
  background-color: #007aff;
  color: white;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
}
