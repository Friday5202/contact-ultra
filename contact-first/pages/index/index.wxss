.search-container {
  position: fixed; /* 固定搜索栏 */
  top: 160rpx; /* 根据导航栏高度调整 */
  left: 0; 
  right: 0; 
  display: flex;
  justify-content: center; 
  align-items: center; 
  padding: 10px; 
  background-color: #f7f7f7; 
  border-radius: 25px; 
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1); 
  margin: 15px; 
  z-index: 2; 
}

.search-input {
  padding-left: 20rpx;
  width: 90%; /* 设定宽度为90% */
  height: 60rpx; /* 可以根据需要调整 */
  color: #000000;
  font-weight: 600;
  border: none; /* 去掉默认边框 */
}




